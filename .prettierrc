{
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "parser": "typescript",
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": false,
    "overrides": [
        {
            "files": [".babelrc", ".editorconfig", ".prettierrc", "*.json"],
            "options": {
                "parser": "json",
                "singleQuote": false,
                "trailingComma": "es5"
            }
        },
        {
            "files": ["*.scss"],
            "options": {
                "parser": "scss",
                "singleQuote": false
            }
        },
        {
            "files": ["*.html"],
            "options": {
                "parser": "html",
                "singleQuote": false
            }
        }
    ]
}
